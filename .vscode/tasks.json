{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "Build All",
            "problemMatcher": [
                "$gcc"
            ],
            "command": "build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Tests",
            "problemMatcher": [
                "$gcc"
            ],
            "command": "build_tests.bat",
        }
    ]
}